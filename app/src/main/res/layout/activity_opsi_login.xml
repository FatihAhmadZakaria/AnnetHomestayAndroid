<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityOpsiLogin">

    <ImageView
        android:id="@+id/img_ol"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/annet_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"/>
    <TextView
        android:id="@+id/text_ol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/opsi_login"
        android:layout_below="@id/img_ol"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="15dp"
        android:textColor="@color/black"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingHorizontal="5dp">
        <Button
            android:id="@+id/bt_ol1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Login"
            android:layout_gravity="bottom"
            android:backgroundTint="@color/main_red"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/bt_ol2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Register"
            android:layout_gravity="bottom"
            android:layout_below="@id/bt_ol1"
            android:backgroundTint="@color/main_red"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/bt_ol3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Guest"
            android:layout_gravity="bottom"
            android:layout_below="@id/bt_ol2"
            android:backgroundTint="@color/main_red"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textStyle="bold"/>
    </RelativeLayout>

</RelativeLayout>