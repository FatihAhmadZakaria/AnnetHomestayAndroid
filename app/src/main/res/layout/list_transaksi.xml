<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/id_riwayet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Transaksi"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/jenis_trans_peng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Transaksi"
                android:layout_below="@id/id_riwayet"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/stat_trans_peng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="Status"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/jenis_trans_peng"/>
            <TextView
                android:id="@+id/total_trans_peng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total trans"
                android:layout_below="@+id/stat_trans_peng"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tgl_trans_peng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tgl"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/stat_trans_peng"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>