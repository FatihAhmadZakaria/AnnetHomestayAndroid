<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        android:backgroundTint="@color/abuabu1"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true">
                    <TextView
                        android:id="@+id/nama_produk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama produk"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/jenis_transaksi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jenis Transaksi"
                        android:layout_below="@id/nama_produk"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/status_transaksi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:text="Status"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/jenis_transaksi"/>
                    <TextView
                        android:id="@+id/total_transaksi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total trans"
                        android:layout_below="@+id/status_transaksi"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:id="@+id/tgl_transaksi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="tgl"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/status_transaksi"
                        android:layout_alignParentEnd="true"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_bayar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/color_bayar"
                        app:cardCornerRadius="5dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_alignParentEnd="true"
                        android:focusableInTouchMode="true">
                        <TextView
                            android:id="@+id/btn_bayar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bayar"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="5dp"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_batal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/main_red"
                        app:cardCornerRadius="5dp"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/card_bayar"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true">
                        <TextView
                            android:id="@+id/btn_batal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Batalkan"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="5dp"/>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal mulai:"
                    android:textColor="@color/black"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tgl_mulai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:text="tanggal"
                    android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="7dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal selesai:"
                    android:textColor="@color/black"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tgl_selesai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:text="tanggal"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>