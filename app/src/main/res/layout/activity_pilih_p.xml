<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityPilihP">
    <LinearLayout
        android:id="@+id/head_pil_penginapan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/main_red">
        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_back"
            android:layout_margin="15dp"/>
        <TextView
            android:id="@+id/text_penginapan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pil_penginapan"
            android:textSize="17sp"
            android:textColor="@color/white"/>
    </LinearLayout>
    <ListView
        android:id="@+id/list_penginapan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head_pil_penginapan"
        android:layout_margin="10dp"
        tools:listitem="@layout/list_home"/>

</RelativeLayout>