<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukan Sandi Lama"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/et_sec_old"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/et_rounded"
        android:hint="Sandi lama"
        android:layout_marginBottom="10dp"
        android:paddingStart="5dp"
        android:inputType="textPassword"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukan Sandi Baru"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/et_sec_new"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/et_rounded"
        android:hint="Sandi Baru"
        android:layout_marginBottom="10dp"
        android:paddingStart="5dp"
        android:inputType="textPassword"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukan Konfirmasi Sandi Baru"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/et_sec_new_confirm"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/et_rounded"
        android:hint="Konfirmasi Sandi Baru"
        android:layout_marginBottom="10dp"
        android:paddingStart="5dp"
        android:inputType="textPassword"/>

</LinearLayout>